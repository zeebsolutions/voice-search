<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:layout_height="310dp"
    android:padding="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linear_layout_top"
        android:layout_height="160dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/destinationtxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="fill"
            android:text="Rate us!"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:text="if you like our app, so we continue our efforts and provide you best services!"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:text="More amazing apps:"
            android:textColor="#847a7a"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ads_layout"
        android:layout_below="@+id/linear_layout_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/ad_button00"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/waether"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/ad_button0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/gps_route_finde"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/ad_button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ad_voice_search"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/ad_button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ad_voice_navigation"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/ad_button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ad_tour_world"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/ad_button4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ad_quiz_trivia"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/ad_button5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ad_unit_converter"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/ad_button6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ad_pun_have_fun"
                android:layout_marginRight="10dp"
                />

        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_below="@+id/ads_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#012163"
            >

            <Button
                android:id="@+id/Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="#ffffff"
                android:text="quit"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/line"/>

            <Button
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Feedback"
                android:textColor="#ffffff"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/line"/>

            <Button
                android:id="@+id/Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:textColor="#ffffff"
                android:text="cancel"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>